<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="allow_project_task_group" model="res.groups">
        <field name="name">Allow to be selected as task team</field>
    </record>

    <record id="project_task_group" model="res.groups">
        <field name="name">Visualize only 'Task Team' project tasks</field>
        <field
            name="implied_ids"
            eval="[(4, ref('project_task_team.allow_project_task_group'))]"
        />
    </record>
</odoo>
